<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_blur"
    tools:context=".MainActivity_">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <FrameLayout
                android:background="@drawable/background_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>

            <ImageView
                android:src="@drawable/status"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:background="@drawable/background_black"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>
            
            <ImageView
                android:src="@drawable/back_btn"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <ImageView
                android:src="@drawable/like_btn"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />
            
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="272dp">

        <FrameLayout
            android:background="@drawable/background_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp">
            
            <ImageView
                android:src="@drawable/streaming_line"
                android:layout_width="232dp"
                android:layout_height="232dp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:src="@drawable/albumcover_img"
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:layout_centerInParent="true"/>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginTop="26dp">

                <ImageView
                    android:src="@drawable/time_slash"
                    android:layout_width="5dp"
                    android:layout_height="17dp"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:src="@drawable/time_now"
                    android:layout_width="24dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="160dp"/>

                <ImageView
                    android:src="@drawable/time_all"
                    android:layout_width="24dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="200dp"/>

            </RelativeLayout>
            
        </RelativeLayout>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <FrameLayout
            android:background="@drawable/background_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="10dp">
            
            <ImageView
                android:src="@drawable/tri"
                android:layout_width="97dp"
                android:layout_height="match_parent" 
                android:layout_centerInParent="true"/>
            
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginTop="58dp">

            <ImageView
                android:src="@drawable/shine"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:layout_marginTop="125dp">

            <ImageView
                android:src="@drawable/list_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="33dp"/>

            <ImageView
                android:src="@drawable/play_back_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/play_btn" />

            <ImageView
                android:src="@drawable/play_forward_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="22dp"
                android:src="@drawable/shuffle_btn" />

        </LinearLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="216dp">

            <ImageView
                android:src="@drawable/volume_off_img"
                android:layout_width="46dp"
                android:layout_height="match_parent" />
            
            <ImageView
                android:background="@drawable/play_bar_all"
                android:layout_width="268dp"
                android:layout_height="2dp"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="24dp"/>

            <ImageView
                android:background="@drawable/play_bar_now"
                android:layout_width="216dp"
                android:layout_height="2dp"
                android:layout_marginLeft="46dp"
                android:layout_marginTop="24dp"/>

            <ImageView
                android:src="@drawable/play_circle"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="238dp"/>

            <ImageView
                android:src="@drawable/volume_up_img"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        
    </RelativeLayout>

</LinearLayout>